<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fuel Quote History</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <a href="/">Home</a>
        <a href="/quote">Quote</a>
        <a href="/history">History</a>
        <a href="/profile">Profile</a>
        <a href="#" id="logoutLink">Logout</a>

        <form action="/logout?_method=DELETE" method="POST"></form>
        <script>
            document.getElementById('logoutLink').addEventListener('click', e => {
                e.preventDefault();
                document.querySelector('form[action="/logout?_method=DELETE"]').submit();
            });
        </script>
    </header>

    <div class="container">
        <!-- Container content -->
        <table id="quoteHistoryTable">
            <thead>
                <tr>
                    <th>Gallons Requested</th>
                    <th>Delivery Address</th>
                    <th>Delivery Date</th>
                    <th>Suggested Price / gallon</th>
                    <th>Total Amount Due</th>
                </tr>
            </thead>
            <tbody>
                <% historyData.forEach(item => { %>
                    <tr>
                        <td><%= item.gallonsRequested %></td>
                        <td><%= item.deliveryAddress %></td>
                        <td><%= item.deliveryDate %></td>
                        <td><%= item.suggestedPrice %></td>
                        <td><%= item.quote %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>

